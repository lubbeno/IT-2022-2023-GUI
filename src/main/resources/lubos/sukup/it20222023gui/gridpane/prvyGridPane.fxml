<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="lubos.sukup.it20222023gui.gridpane.PrvyGridPaneController"
          prefHeight="400.0" prefWidth="600.0" gridLinesVisible="true" alignment="CENTER"
            hgap="5" vgap="5">

    <columnConstraints>
        <ColumnConstraints prefWidth="100" />
        <ColumnConstraints prefWidth="150" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="50"/>
        <RowConstraints prefHeight="50"/>
        <RowConstraints prefHeight="30"/>
    </rowConstraints>

    <Label text="Login window " GridPane.columnSpan="2" GridPane.halignment="CENTER"
                        GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="loginText"></Label>
    <Label text="user ID" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER"></Label>
    <Label text="password" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="CENTER"></Label>
    <Button text="OK" GridPane.columnIndex="0" GridPane.rowIndex="3" onAction="#process"></Button>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"></TextField>
    <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="password" ></PasswordField>
    <Button text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="RIGHT"></Button>
</GridPane>
